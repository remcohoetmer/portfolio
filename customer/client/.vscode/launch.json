{
    "version": "0.2.0",
    "configurations": [
        {
       "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "program": "/usr/local/bin/http-server",
        "cwd": "${workspaceRoot}",
        "sourceMaps": true,
        "stopOnEntry": false,
        "smartStep": true,
        "runtimeArgs": ["--nolazy"]
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceRoot}"
        }
    ]
}